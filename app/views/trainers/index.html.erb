<%= image_tag 'gym_logo.png', style: 'height:100px;' %>
<h1>Trainers</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @trainers.each do |trainer| %>
      <tr>
        <td><%= trainer.name %></td>
        <td><%= trainer.last_name %></td>
        <td><%= link_to 'Show details', trainer, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_trainer_path(trainer), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', trainer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Trainer', new_trainer_path, class: 'btn btn-primary' %>
