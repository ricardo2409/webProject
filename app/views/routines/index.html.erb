<%= image_tag 'gym_logo.png', style: 'height:100px;' %>
<h1><%= @trainee.name %>'s routines</h1>
<%= link_to '<-- Back to trainees', trainees_path %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Routine description</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routines.each do |routine| %>
      <tr>
        <td><%= routine.name %></td>
        <td><%= routine.description %></td>
        <td><%= routine.start_date %></td>
        <td><%= routine.end_date %></td>
        <td><%= link_to 'Show details', trainee_routine_path(@trainee, routine), class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_trainee_routine_path(@trainee, routine), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', trainee_routine_path(@trainee, routine), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Routine', new_trainee_routine_path, class: 'btn btn-primary' %>
